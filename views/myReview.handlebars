<div id="my-review" class="container mt-4">
    <h3>My Reviews</h3>

    {{#each reviews}}
        <div class="card mb-3">
            <div class="card-header">
                <h2 class="h5">{{this.businessName}}:</h2>
            </div>
            <div class="card-body">
                <h4 class="h6">Ratings: {{this.rating}}</h4>
                <p>{{this.description}}</p>
                {{#if this.image}}
                    <img src="{{this.image}}" alt="Review Image" class="img-fluid">
                {{/if}}
            </div>
            <ul class="list-group list-group-flush">
                {{#each commentData}}
                    <li class="list-group-item">
                        {{this.commentDescription}}, Posted by: {{this.username}}
                    </li>
                {{else}}
                    <li class="list-group-item">No recent comments.</li>
                {{/each}}
            </ul>
        </div>
    {{else}}
        <p>No recent reviews.</p>
    {{/each}}
</div>
