<div class="user-profile">
    <div class="d-flex align-items-center">
        <!-- Placeholder for User Image -->
        <div class="user-image-placeholder mr-3">
            
            <!-- <i class="fa fa-user" aria-hidden="true"></i> --> <!-- Example if using Font Awesome -->
        </div>

        <!-- User Info -->
        <div class="user-info">
            <div id="user-profile-hidden-id" hidden>{{user.userId}}</div>
            <div>{{user.firstName}} {{user.lastName}}</div>
            <div>Following: {{user.following}} | Followers: {{user.followers}}</div>
        </div>
    </div>

    <!-- Buttons -->
    <div class="mt-3">
        <form action= "/updateUser/{{user.userId}}" method="GET">
        <button type="submit" id="update-user-button" class="btn btn-primary btn-sm mr-2">Edit User Info</button>
        </form>
        <form action="/logout" method="GET">
        <button type="submit" id="logout-button" class="btn btn-primary btn-sm mr-3">Log Off</button>
        </form>
      
    </div>
</div>


